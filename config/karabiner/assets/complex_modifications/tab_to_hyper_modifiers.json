{
  "title": "Tab to Hyper When Held - Modifiers",
  "rules": [
    {
      "description": "v1 --> Modifiers Immediately - no lazy or repeat",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 0
          },
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "v2 --> lazy and repeat",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "lazy": true,
              "repeat": false,
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "v3 --> lazy and repeat, including support for per key modifications",
      "manipulators": [
        {
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "set_variable": {
                "name": "tab_modifier",
                "value": 1
              }
            },
            {
              "lazy": true,
              "repeat": false,
              "key_code": "left_control",
              "modifiers": [
                "left_control",
                "left_option",
                "left_shift",
                "left_command"
              ]
            }
          ],
          "to_if_alone": {
            "key_code": "tab"
          },
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "tab_modifier",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_modifier",
              "value": 1
            }
          ],
          "from": {
            "any": "key_code"
          },
          "to": [
            {
              "any": "key_code"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_modifier",
              "value": 1
            }
          ],
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "optional": "any"
            }
          },
          "to": [
            {
              "shell_command": "/usr/local/bin/yabai -m window --close"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
