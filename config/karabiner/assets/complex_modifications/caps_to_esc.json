{
  "title": "Caps to Esc",
  "rules": [
    {
      "description": "CAPS_LOCK to CONTROL or ESCAPE (If Alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
