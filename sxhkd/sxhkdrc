# key names are keysyms shown in xev
super+p 
    rofi -show combi -combi-modi "run#global:rofi_launch_menu" -modi combi
super+o 
    source i3_wrapper && i3_global_menu

super + Escape
    pkill -USR1 -x sxhkd



# i3 specific
super+{Left,Down,Up,Right}
    i3-msg focus {left,down,up,right}

super + {j,k}
    i3-msg focus {Down, Up}

super + h
    i3_focus_next_visible reverse
  
super + l
    i3_focus_next_visible

super+{Left,Down,Up,Right}
    i3-msg focus {left,down,up,right}

super + a
    i3-msg focus parent

super + z
    i3-msg focus child

# focus marks
control + alt + shift + q
    i3_focus_recursive_mark dev_term
control + alt + shift + e
    i3_focus_recursive_mark dev_browser 
control + alt + shift + r
    i3_focus_recursive_mark alt_term
control + alt + shift + w
    i3_focus_recursive_mark notes


super + Tab
    i3_tab inner next
super + shift + Tab
    i3_tab inner prev

super + bracketleft
    i3_tab inner prev
super + bracketright
    i3_tab inner next

control + alt + shift + Left
    i3_tab outer left
control + alt + shift + Right 
    i3_tab outer right


control + alt + shift + bracketleft
    i3_tab outer prev

control + alt + shift + bracketright
    i3_tab outer prev


super + less
    i3-msg focus mode_toggle

super+shift+{h,j,k,l}
    i3-msg move {left,down,up,right}

super+shift+{Left,Down,Up,Right}
    i3-msg move {left,down,up,right}

super + f
    i3-msg fullscreen toggle

super + shift + space
    i3-msg floating toggle

super + f
    i3-msg fullscreen toggle


# workspaces
super + {1,2,3,4,5,6,7,8,9}
    i3-msg workspace {1,2,3,4,5,6,7,8,9}

super + shift+{1-9}
    i3-msg move container to workspace number {1-9}

super + shift + less
    i3-msg move workspace to output right

super + shift + greater
    i3-msg move workspace to output left
# launchers
